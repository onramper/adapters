{
  "compilerOptions": {
    "target": "ES6",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "noEmit": false,
    "outDir": "build",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "lib": [
      "ES6",
      "dom"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "build",
    "src/**/*.test.ts"
  ]
}
